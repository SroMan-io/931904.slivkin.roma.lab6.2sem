@model lab6.Models.TopicModel

@{
    ViewData["Title"] = "Edit Topic";
}

<h1>Edit post</h1>
<hr />
<div>
    <div>
        <form asp-action="Edit">
           <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div class="form-group">                  
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>                  
           </div>
           <div class="form-group">                 
                <label>Text </label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>               
            </div>
            <div class="form-group">
                <input hidden asp-for="DateCreated" class="form-control" value="@Model.DateCreated" />
            </div>
            <div class="form-group">
                <input hidden asp-for="ForumId" class="form-control" value="@Model.ForumId" />
            </div>
            <div class="form-group">
                <input hidden asp-for="AuthorId" class="form-control" value="@Model.AuthorId" />
            </div>
            <div class="form-group">
                <p><input type="submit" value="Save" class="btn btn-primary" /></p>
                <p><a asp-action="OpenTopic" asp-route-TopicId="@Model.Id">Back</a></p>               
            </div>
        </form>
    </div>
</div>
<div class="form-group">
                <input hidden asp-for="Id" class="form-control" value="@Model.Id" />
            </div>
