@{ 
    var Identity = Context.User.Identity;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Backend6</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/svgs.css" />

    <style>
   
    .headlinks {color: grey; text-decoration: none;} 
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
           @* <div class="container">*@
                <a span style = "font-size: 20px; color: grey; text-decoration: none; margin-left:80px; margin-right:30px;"  asp-area="" asp-controller="Home" asp-action="Index"><b>Backend6</b></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">                      
                        <li class="nav-item">
                            <a class="headlinks" asp-controller="Account" asp-action="Blog">Blog</a>
                        </li>
                        <li class="nav-item">
                            <a class="headlinks" span style = "margin-left: 25px;" asp-controller="Mockups" asp-action="Index">Mockups</a>
                        </li>
                    </ul>
                </div>
                @if (!Identity.IsAuthenticated)
                {
                 <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
                     <ul class="navbar-nav ml-auto">
                         <li class="nav-item">
                             <a class="headlinks" span style = "margin-right: 30px;" asp-controller="Auth" asp-action="Register">Register</a>
                         </li>
                         <li class="nav-item">
                             <a class="headlinks" span style = "margin-right: 75px;" asp-controller="Auth" asp-action="LogIn">Log In</a>
                         </li>
                     </ul>
                 </div>
                }
                else
                {
                <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                           @*<span class="nav-link text-light">*@ <div span style="color: grey; margin-right: 30px;">Hello,⠀<a class="headlinks" asp-controller="Account" asp-action="Profile" style="display:inline; margin:0 0 0 -5px;"> @Identity.Name</a>!</div>
                        </li>
                        <li class="nav-item">
                            <a class="headlinks" span style = "margin-right: 75px;" asp-controller="Auth" asp-action="LogOut">Log Out</a>
                        </li>
                    </ul>
                </div>
                }

            @*</div>*@
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">     
        <div class="container">
            &copy; 2022 - Backend6 
        </div>
    </footer>
</body>
</html>
