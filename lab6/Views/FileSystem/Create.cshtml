@model lab6.Models.FolderModel

@{
    ViewData["Title"] = "Create new folder";
}

<h1>Create new folder</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" autofocus />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input hidden asp-for="ParentFolderId" class="form-control" value="@ViewBag.ParentId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                 <a asp-action="OpenFolder" asp-route-id="@ViewBag.ParentId" class="btn btn-primary">Cancel</a>
            </div>
        </form>
    </div>
</div>