@{
    ViewData["Title"] = "Home Page";
    var Identity = Context.User.Identity;
}



@if (Identity.IsAuthenticated) { 
    <div class="text-center">
        <h1 class="display-4 mt-5 mb-5">Welcome to the Forum, @Identity.Name!</h1>
    </div>
} else
{
    <div class="text-center">
        <h1 class="display-4 mt-5 mb-5">Welcome to the Forum!</h1>
    </div>
}

